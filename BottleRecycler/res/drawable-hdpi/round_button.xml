<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
       <shape
		  xmlns:android="http://schemas.android.com/apk/res/android"
		  android:shape="oval">
		   
		  <gradient 
		    android:type="radial"
		    android:gradientRadius="50"
		    android:centerX=".5"
		    android:centerY=".5"
		    android:endColor="#005200"
		    android:startColor="#179C17" />
		  
		  <size 
		    android:width="30dp"
		    android:height="30dp"/>
		  
		        <padding
		         	android:left="10dp"
		         	android:top="10dp"
		         	android:right="10dp"
		         	android:bottom="10dp"/>
		</shape>
    </item>

    <item android:state_enabled="false">
		<shape
		  xmlns:android="http://schemas.android.com/apk/res/android"
		  android:shape="oval">
		   
		  <gradient 
		    android:type="radial"
		    android:gradientRadius="50"
		    android:centerX=".5"
		    android:centerY=".5"
		    android:endColor="#005200"
		    android:startColor="#179C17" />
		  
		  <size 
		    android:width="30dp"
		    android:height="30dp"/>
		  
		        <padding
		         	android:left="10dp"
		         	android:top="10dp"
		         	android:right="10dp"
		         	android:bottom="10dp"/>
		</shape>
    </item>

</selector>
